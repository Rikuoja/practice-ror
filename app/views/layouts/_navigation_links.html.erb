<%# add navigation links to this file %>
<div class="btn-toolbar inline pull-left">
  <div class="btn-group">
    <button type="button" class="btn btn-default"><li><%= link_to 'breweries', breweries_path %></li></button>
  <button type="button" class="btn btn-default"><li><%= link_to 'beers', beers_path %></li></button>
  <button type="button" class="btn btn-default"><li><%= link_to 'styles', styles_path %></li></button>
  <button type="button" class="btn btn-default"><li><%= link_to 'ratings', ratings_path %></li></button>
  <button type="button" class="btn btn-default"><li><%= link_to 'users', users_path %></li></button>
  <button type="button" class="btn btn-default"><li><%= link_to 'clubs', beer_clubs_path %></li></button>
  <button type="button" class="btn btn-default"><li><%= link_to 'places', places_path %></li></button>
<% if not current_user.nil? %>
        </div>
    <div class="btn-group">
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        <%= current_user.username%> <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
    <li><%= link_to 'my page', current_user %></li>
    <li><%= link_to 'rate a beer', new_rating_path %></li>
    <li><%= link_to 'join a club', new_membership_path %></li>
    <li><%= link_to 'signout', signout_path, method: :delete %></li>
          </ul>
        </div>
<% else %>
      <button type="button" class="btn btn-default"><li><%= link_to 'signin', signin_path %></li></button>
      <button type="button" class="btn btn-default"><li><%= link_to 'signup', signup_path %></li></button>
        </div>
<% end %>
</div>